<div style="background-color:#F5F8FA;">
<% if logged_in? %>
	<div class="row" style="margin-top:50px;">
	    <aside class="col-md-4">
	      <section class="user_info">
	        <%= render 'shared/user_info' %>
	      </section>
	      <section class="stats">
	        <%= render 'shared/stats' %>
	      </section>
	      <section class="micropost_form">
	        <%= render 'shared/micropost_form' %>
	      </section>    
	    </aside>
		<div class="container">
			<div class="col-md-8" style="border: 1px solid #e1e8ed;background-color:white;border-radius:4px;padding:0px;">
			    <h3 style="margin-left:20px;">Tweets</h3>
			    <%= render 'shared/feed' %>
			</div>	  
		</div>
	</div>
<% else %>
	<div class="center jumbotron">
	  <h1 style="font-family:'Montserrat'">Welcome to <strong>dumb</strong>twitter</h1>
	  <h2>
	    This is a dumb twitter clone
	  </h2>

	  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-signup" %>
	</div>
<% end %>
</div>