<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <div style="display:inline; font-size:12px;">
  	<span class="user" style="display:inline;font-family:'Montserrat';font-weight:bold;color:black; font-size:14px;"><%= link_to micropost.user.name, micropost.user, style:'color:black' %></span>
  	<span style="display:inline; font-size:8px;color:gray;padding-left:5px;font-family:'Montserrat'"><%= time_ago_in_words(micropost.created_at) %> ago.</span>
  </div>
  <span class="content" style="font-size:14px;color:#292F33;"><%= micropost.content %></span>
  <%= image_tag micropost.picture.url if micropost.picture? %>
  <span class="timestamp">
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>