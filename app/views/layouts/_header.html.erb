<header class="navbar navbar-fixed-top navbar-light bg-faded">
    <div class="container">
        <%= link_to "DumbTwitter", '/', id: "logo" %>
        <nav>
          	<ul class="nav navbar-nav navbar-right">
            	<li><%= link_to "Home", root_path, class: "nav-link" %></li>
            	<li><%= link_to "Help", help_path, class: "nav-link" %></li>
              <% if logged_in? %>
                <li><%= link_to "Users", users_path, class: "nav-link" %></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Account <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Profile", current_user %></li>
                    <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to "Log out", logout_path, method: "delete" %>
                    </li>
                  </ul>
                </li>
              <% else %>
                <li><%= link_to "Log in", login_path, class: "nav-link" %></li>
              <% end %>
          	</ul>
        </nav>
    </div>
</header>